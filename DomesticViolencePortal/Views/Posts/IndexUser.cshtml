                                </div>
                                <h3 class="" heading mt-3">@Html.ActionLink(item.Title, "Details", "Posts", new { id = item.UserId }, null)</h3>
                                <p>@item.Text<span>...</span></p>
                            </div>
                            <td>
                                @Html.ActionLink("Редактировать", "EditForUser", new { id=item.PostId })|
                                @Html.ActionLink("Комментарии", "DetailsForUser", new { id=item.PostId }) |
                                @Html.ActionLink("Удалить", "DeleteForUser", new { id=item.PostId })
                            </td>
                        </div>
                       
                    </div>
                    
                }
                




